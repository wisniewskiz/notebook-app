<%- layout ('layouts/boilerplate')%>

<div class="container">
    <div class="row justify-content-center my-5">
        <div class="card col-6 px-5 pb-4 shadow-lg border border-0">
        <div class="card-body">
            <h1><%= note.title %></h1>
            <h6 class="card-subtitle mb-2"><%= moment(note.updatedAt).format('MMM Do YYYY'); %></h6>
            <p><%= note.body %></p>
        </div>
        <div class="">
            <a href="/notes"><button class="btn btn-primary"><span class="material-symbols-outlined me-2 align-middle">
                arrow_back
                </span>Back To Notebook</button></a>
            <a href="/notes/<%= note._id %>/edit"><button class="btn btn-primary"><span class="material-symbols-outlined align-middle me-2">
                edit_note
                </span>Edit Note</button></a>

        </div>
        </div>
    </div>
</div>